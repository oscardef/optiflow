# Database Configuration
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=

# MQTT Broker (your MacBook)
# Use your MacBook's IP address (same as ESP32 uses)
# If using hotspot "Oscar", find IP with: ipconfig getifaddr en0 or en1
MQTT_BROKER_HOST=
MQTT_BROKER_PORT=
MQTT_TOPIC=

# MQTT Configuration for Simulation
# The MQTT broker address used by the simulation
MQTT_BROKER=
MQTT_PORT=

# WiFi Network Configuration (Optional)
# If set, the system will verify WiFi connection before starting simulation
# Leave empty or comment out to skip WiFi validation
# Example: REQUIRED_WIFI_SSID=Oscar
REQUIRED_WIFI_SSID=

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
